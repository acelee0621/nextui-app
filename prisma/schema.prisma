generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  userId   String  @unique
  username String  @unique
  fullName String  @unique
  avatar   String
  topic    Topic[]
}

model Topic {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  user     User     @relation(fields: [fullName], references: [fullName])
  fullName String
  avatar   String
  content  String
  images   String[]
  options  Option[]
}

model Option {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  topic   Topic  @relation(fields: [topicId], references: [id])
  topicId String @db.ObjectId
  key     String
}
